<Window x:Class="EVEAutoInvite.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Help" Height="274" Width="393">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" TextWrapping="Wrap" Text="To get started, add an account under Menu -> Add Character.&#x0a;&#x0a;Any authenticated characters will show up in the selection dropdown.&#x0a;&#x0a;After a character is selected you may select the chat log to listen to.&#x0a;&#x0a;Once configured, press start and anyone who sends a message that contains the Invite Code in the selected chat channel will be automatically invited to the fleet.&#x0a;" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Grid.Row="1" Content="Close" Width="76" Margin="10" Click="CloseButton_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
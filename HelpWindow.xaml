<Window x:Class="EVEAutoInvite.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Help" Height="100" Width="180">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="This is the help information." Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Grid.Row="1" Content="Close" Width="76" Margin="10" Click="CloseButton_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>
</Window>